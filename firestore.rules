rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow all authenticated users read and write to their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow all authenticated users read and write to their own tasks
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow group members to read and write group tasks
    match /groups/{groupId}/tasks/{taskId} {
      allow read, write: if exists(/databases/$(database)/documents/groups/$(groupId)/members/$(request.auth.uid));
    }

    // Apply the same rules to all documents in the database
    match /{documents=**} {
      allow read, write: if request.auth != null;
    }
  }
}
